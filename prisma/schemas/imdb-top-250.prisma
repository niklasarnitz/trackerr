model ImdbTop250 {
    id         String   @id @default(cuid())
    rank       Int      @unique
    title      String
    tmdbId     String   @unique // TMDB movie ID
    posterPath String? // Path in MinIO storage or TMDB poster path
    year       String?
    imdbId     String?
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@index([tmdbId])
    @@index([rank])
}
